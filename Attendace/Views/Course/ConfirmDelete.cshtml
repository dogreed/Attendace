@model Attendace.Models.Course
@{
    ViewData["Title"] = "ConfirmDelete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>Are you sure you want to delete this course?</h2>

<div>
    <h4>@Model.CourseName</h4>
    <p><strong>Department:</strong> @Model.Department.DepartmentName</p>
    <p><strong>Semester:</strong> @Model.Semester</p>
    <p><strong>Academic Year:</strong> @Model.AcademicYear</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.CourseId" method="post">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
