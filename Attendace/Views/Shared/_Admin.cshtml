<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --text-dark: #5a5c69;
        }

        body {
            background-color: #f8f9fc;
            color: var(--text-dark);
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .navbar {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            background: white;
        }

        .navbar-brand {
            font-weight: 800;
            color: var(--primary-color) !important;
        }

        .nav-link {
            font-weight: 600;
            padding: 0.5rem 1rem !important;
        }

            .nav-link.active {
                color: var(--primary-color) !important;
            }

        .card {
            border: none;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }

        footer {
            background: white;
            box-shadow: 0 -0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">
                    <i class="bi bi-shield-lock me-2"></i>
                    Super Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="GenerateQR">
                                <i class="bi bi-qr-code me-1"></i> GenerateQR
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="CreateRoutine">
                                <i class="bi bi-calendar2-day me-1"></i> Add Routine
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Department" asp-action="Index">
                                <i class="bi bi-view-list me-1"></i>Department
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Course" asp-action="List">
                                <i class="bi bi-journal me-1"></i>Course
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="RoutineList">
                                <i class="bi bi-card-list"></i> Routine List
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="AssignCourse">
                                <i class="bi bi-person-workspace"></i> Assign course
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="FacultyList">
                                <i class="bi bi-fullscreen"></i> Faculty
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @await Html.PartialAsync("_LogoutPartial")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Super Admin Dashboard
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>